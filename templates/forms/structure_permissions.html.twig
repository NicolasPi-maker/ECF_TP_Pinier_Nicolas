{{ form_start(structureForm, {'attr': {'class': 'structure-perms-form'}}) }}
    <div class="form-field form-permissions">
        <div class="form-label">
            {{ form_label(structureForm.sell_drink, null, {
                label: 'Vente de boisson'
            }) }}
        </div>
        <div class="form-input slider-block">
            <label class="switch">
                {{ form_widget(structureForm.sell_drink, {'attr': {'class': 'isActive'}})}}
                <span class="slider round"></span>
            </label>
        </div>
    </div>
    <div class="form-field form-permissions">
        <div class="form-label">
            {{ form_label(structureForm.manage_schedule, null, {
                label: 'Gestion du planning'
            }) }}
