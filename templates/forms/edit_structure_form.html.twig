{% extends 'default.html.twig' %}

{% block title %}Modifier une franchise{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/default.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('css/franchise_form.css') }}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block content %}
    <main>
        <div class="title-wrapper">
            <h1 class="main-title">Modifier la structure <span>{{ structure.getStructureName }}</span></h1>
        </div>
        <section>
            {{ form_start(form) }}
            <div class="form-field">
                <div class="form-label">
                    {{ form_label(form.structure_name, null, {
                        label: 'Nom de la structure'
                    }) }}
                </div>
                <div class="form-input">
                    {{ form_widget(form.structure_name)}}
                </div>
            </div>
            <div class="form-field">
                <div class="form-label">
                    {{ form_label(form.structure_address, null, {
                        label: 'Adresse de la structure'
                    }) }}
                </div>
                <div class="form-input">
                    {{ form_widget(form.structure_address)}}
                </div>
            </div>
            <div class="form-field">
                <div class="form-label">
                    {{ form_label(form.url, null, {
                        label: 'Url de la franchise'
                    }) }}
                </div>
                <div class="form-input">
                    {{ form_widget(form.url)}}
                </div>
                {% if form_errors(form.url) %}
                <div class="form-error row-error">
                    <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 64 64"><path fill="#ff5a79" d="M62 52c0 5.5-4.5 10-10 10H12C6.5 62 2 57.5 2 52V12C2 6.5 6.5 2 12 2h40c5.5 0 10 4.5 10 10v40z"/>
                        <path fill="#fff" d="M50 21.2L42.8 14L32 24.8L21.2 14L14 21.2L24.8 32L14 42.8l7.2 7.2L32 39.2L42.8 50l7.2-7.2L39.2 32z"/>
                    </svg>
                    {{ form_errors(form.url) }}
                </div>
                {% endif %}
            </div>
            <div class="form-field">
                <div class="form-label">
                    {{ form_label(form.manager_name, null, {
                        label: 'Nom du manager'
                    }) }}
                </div>
                <div class="form-input">
                    {{ form_widget(form.manager_name)}}
                </div>
            </div>
            <div class="form-field">
                <div class="form-label">
                    {{ form_label(form.user_id, null, {
                        label: 'Adresse email du manager'
                    }) }}
                </div>
                <div class="form-input">
                    {{ form_widget(form.user_id)}}
                </div>
            </div>
            <div class="form-field">
                <div class="form-label">
                    {{ form_label(form.logo_url, null, {
                        label: 'Logo de la structure'
                    }) }}
                </div>
                <div class="form-input">
                    {{ form_widget(form.logo_url)}}
                </div>
            </div>
            <div class="form-field">
                <div class="form-label">
                    {{ form_label(form.is_active, null, {
                        label: 'Active/Non Active'
                    }) }}
                </div>
                <div class="form-input slider-block">
                    <label class="switch">
                        {{ form_widget(form.is_active, {'attr': {'class': 'isActive'}})}}
                        <span class="slider round"></span>
                    </label>
                </div>
            </div>
            <div class="button-wrapper">
                <button class="form-button" type="submit">
                    Modifier
                </button>
            </div>
            {{ form_end(form) }}
        </section>
    </main>
{% endblock %}