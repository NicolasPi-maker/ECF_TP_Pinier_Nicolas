{% extends 'default.html.twig' %}

{% block title %}Changement de mot de passe{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/franchise_form.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('css/default.css') }}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block content %}
    <main>
        <div class="title-wrapper">
            <h1 class="main-title">Changement de <span>mot de passe</span></h1>
        </div>
        <section>
            {{ form_start(form) }}
                <div class="form-field">
                    <div class="form-label">
                        {{ form_label(form.email, null, {
                            label: 'Confirmer l\'adresse email'
                        }) }}
                    </div>
                    <div class="form-input">
                        {{ form_widget(form.email) }}
                    </div>
                    {% if form_errors(form.email) %}
                        <div class="form-error row-error">
                            <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 64 64"><path fill="#ff5a79" d="M62 52c0 5.5-4.5 10-10 10H12C6.5 62 2 57.5 2 52V12C2 6.5 6.5 2 12 2h40c5.5 0 10 4.5 10 10v40z"/>
                                <path fill="#fff" d="M50 21.2L42.8 14L32 24.8L21.2 14L14 21.2L24.8 32L14 42.8l7.2 7.2L32 39.2L42.8 50l7.2-7.2L39.2 32z"/>
                            </svg>
                            <p>{{ form_errors(form.email) }}</p>
                        </div>
                    {% endif %}
                </div>
                <div class="form-field">
                    <div class="form-label">
                        {{ form_label(form.new_password, null, {
                            label: 'Nouveau Mot de passe'
                        }) }}
                    </div>
                    <div class="form-input">
                        {{ form_widget(form.new_password) }}
                    </div>
                    {% if form_errors(form.new_password) %}
                        <div class="form-error row-error">
                            <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 64 64"><path fill="#ff5a79" d="M62 52c0 5.5-4.5 10-10 10H12C6.5 62 2 57.5 2 52V12C2 6.5 6.5 2 12 2h40c5.5 0 10 4.5 10 10v40z"/>
                                <path fill="#fff" d="M50 21.2L42.8 14L32 24.8L21.2 14L14 21.2L24.8 32L14 42.8l7.2 7.2L32 39.2L42.8 50l7.2-7.2L39.2 32z"/>
                            </svg>
                            <p>{{ form_errors(form.new_password) }}</p>
                        </div>
                    {% endif %}
                </div>
                <div class="form-field">
                    <div class="form-label">
                        {{ form_label(form.confirm_password, null, {
                            label: 'Confirmation du Mot de passe'
                        }) }}
                    </div>
                    <div class="form-input">
                        {{ form_widget(form.confirm_password) }}
                    </div>
                    {% if form_errors(form.confirm_password) %}
                    <div class="form-error row-error">
                        <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 64 64"><path fill="#ff5a79" d="M62 52c0 5.5-4.5 10-10 10H12C6.5 62 2 57.5 2 52V12C2 6.5 6.5 2 12 2h40c5.5 0 10 4.5 10 10v40z"/>
                            <path fill="#fff" d="M50 21.2L42.8 14L32 24.8L21.2 14L14 21.2L24.8 32L14 42.8l7.2 7.2L32 39.2L42.8 50l7.2-7.2L39.2 32z"/>
                        </svg>
                        <p>{{ form_errors(form.confirm_password) }}</p>
                    </div>
                    {% endif %}
                </div>
                <div class="button-wrapper">
                    <button class="form-button" type="submit">
                        Cr√©er
                    </button>
                </div>
            {{ form_end(form) }}
        </section>
    </main>
{% endblock %}
